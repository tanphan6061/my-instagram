{
    "name": "server",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "node ./bin/www",
        "dev": "nodemon --inspect ./bin/www",
        "linting": "eslint '**/*.js' app.js --ignore-pattern node_modules/",
        "prettier": "prettier '**/*.js' app.js --ignore-pattern node_modules/",
        "format": "npm run prettier -- --write"
    },
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "bcrypt": "^5.0.0",
        "cloudinary": "^1.22.0",
        "cookie-parser": "~1.4.4",
        "cors": "^2.8.5",
        "debug": "~2.6.9",
        "dotenv": "^8.2.0",
        "express": "~4.16.1",
        "http-errors": "~1.6.3",
        "http-status": "^1.4.2",
        "joi-objectid": "^3.0.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.9.25",
        "morgan": "~1.9.1",
        "multer": "^1.4.2",
        "multer-storage-cloudinary": "^3.0.0",
        "nodemailer": "^6.4.10",
        "nodemailer-smtp-transport": "^2.7.4",
        "pug": "3.0.1",
        "shortid": "^2.2.15"
    },
    "devDependencies": {
        "eslint": "^7.5.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-plugin-import": "^2.22.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "'**/*.js' app.js --ignore-pattern node_modules/": [
            "eslint '**/*.js' app.js --ignore-pattern node_modules/",
            "npm run format",
            "git add"
        ]
    }
}
